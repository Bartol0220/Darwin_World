<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Slider?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="550.0" minWidth="850.0"
            stylesheets="simulation.css"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">

    <top>
        <HBox spacing="15" alignment="CENTER">
            <Label fx:id="info" text="Simulation is running" textAlignment="CENTER"/>
            <Label fx:id="messageLabel" textAlignment="CENTER"/>
            <Button fx:id="playPauseButton" text="Pause" onAction="#onSimulationPlayPauseClicked"/>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="mapGridPane" gridLinesVisible="true" alignment="CENTER"/>
    </center>
    <right>
        <VBox>
            <VBox minWidth="500" maxWidth="500">
                <Label text="Day lenght [ms]:" textAlignment="CENTER"/>
                <HBox spacing="10">
                    <Slider fx:id="threadSleep" minWidth="400" min="5" max="3000" value="700" showTickLabels="true" majorTickUnit="500"/>
                    <Label fx:id="threadSleepDisplay" text="Value: 700" textAlignment="CENTER"/>
                </HBox>
            </VBox>
            <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS" minWidth="500" maxWidth="500">
                <VBox spacing="5">
                    <HBox spacing="10">
                        <Label text="Number of living animals:" textAlignment="CENTER"/>
                        <Label fx:id="currentAnimalCount" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Number of all animals:" textAlignment="CENTER"/>
                        <Label fx:id="allAnimalCount" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Maximum number of living animals:" textAlignment="CENTER"/>
                        <Label fx:id="maximumAnimalCount" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Minimum number of living animals:" textAlignment="CENTER"/>
                        <Label fx:id="minimumAnimalCount" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Average energy for living animals:" textAlignment="CENTER"/>
                        <Label fx:id="averageEnergy" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="average birthrate for living animals:" textAlignment="CENTER"/>
                        <Label fx:id="averageBirthrate" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Number of dead animals:" textAlignment="CENTER"/>
                        <Label fx:id="deadAnimalCount" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Average lifespan for dead animals:" textAlignment="CENTER"/>
                        <Label fx:id="averageLifespan" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="The most popular genotype:" textAlignment="CENTER"/>
                        <Label fx:id="mostCommonGenes" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Amount of grass on map:" textAlignment="CENTER"/>
                        <Label fx:id="grassCount" textAlignment="CENTER"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="Number of free space:" textAlignment="CENTER"/>
                        <Label fx:id="freeSpace" textAlignment="CENTER"/>
                    </HBox>
                </VBox>
            </ScrollPane>
            <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS" minWidth="500" maxWidth="500">
                <VBox spacing="20">
                    <Label fx:id="animalInfo"
                           text="To select an animal, stop the simulation and click on the chosen one."
                           textAlignment="CENTER"/>
                    <Label fx:id="animalStats" lineSpacing="10"/>
                </VBox>
            </ScrollPane>
        </VBox>

    </right>
</BorderPane>
